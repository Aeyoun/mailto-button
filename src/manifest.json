{
  "manifest_version": 2,
  "version": "1.1",
  "name": "Mailto button",
  "description": "Opens a new email in your default email application (or website) with the current pageâ€™s title and address.",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"

  },
  "permissions": [ "contextMenus", "http://*/*", "https://*/*" ],
  "incognito": "split",
  "offline_enabled": true,
  "homepage_url": "https://www.aeyoun.com/projects/extensions/mailto-button.html",
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Email page",
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    }
  }
}
